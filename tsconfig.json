{
	"extends": "@hoishin/tsconfig",
	"compilerOptions": {
		"lib": [
			"esnext",
			"dom"
		],
		"jsx": "react-jsx",
		"declaration": true,
		"moduleResolution": "node",
		"target": "ESNext",
		"skipLibCheck": true,
		"types": [
			"nodecg/types/browser",
			"react",
			"jest"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	]
}
